<% if logged_in? %>
  <div class="container message_board_form">
    <div class="col-md-6 col-md-offset-3">
      <div class="row">
          <div class="top">
              <h2>新規作成</h2>
          </div>
          <p><span class="title">Title</span></p>
          <%= form_for(@message_board) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="field">
              <%= hidden_field_tag :item_id, @item.id %>
              <%= f.text_field :title, placeholder: "input title" %>
            </div>
            <%= f.submit "Post", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
<% end %>