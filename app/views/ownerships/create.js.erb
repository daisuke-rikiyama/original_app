<% if params[:type] == "Have" %>
  $(".have-<%= @item.id %>,.have-<%= @item.asin %>").replaceWith("<%= escape_javascript(cell(:items).(:unhave , item: @item)) %>");
<% else %>
  $(".want-<%= @item.id %>,.want-<%= @item.asin %>").replaceWith("<%= escape_javascript(cell(:items).(:unwant , item: @item)) %>");
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');