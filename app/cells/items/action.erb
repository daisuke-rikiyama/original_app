<div class="action">
  <% if logged_in? %>
    <% if current_user.want? @item %>
      <%= cell(:items).(:unwant , item: @item) %>
    <% else %>
      <%= cell(:items).(:want , item: @item) %>
    <% end %> 
  
    <% if current_user.have? @item %>
      <%= cell(:items).(:unhave , item: @item) %>
    <% else %>
      <%= cell(:items).(:have , item: @item) %>
    <% end %>
    
    <% unless current_page?(@item) %>
      <%= link_to "詳細" , @item , class: "btn btn-info btn-sm" %>
    <% end %>
  <% end %>
</div>